# LoRACat Environment Configuration
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# --- Hugging Face ---
# Required to download base models and push trained LoRAs
HF_TOKEN=

# --- ComfyUI Connection ---
COMFYUI_ENDPOINT=http://host.docker.internal:8188
COMFYUI_DELAY=2.0

# --- Subject / Trigger ---
TRIGGER_WORD=nyafyi_woman

# --- Base Model ---
# Path inside container (maps to ./models volume)
MODEL_PATH=/models/stable-diffusion-xl-base-1.0

# --- Training Hyperparameters ---
TRAIN_BATCH_SIZE=4
GRADIENT_ACCUMULATION_STEPS=1
LEARNING_RATE=1e-4
NUM_TRAIN_EPOCHS=20
LORA_RANK=32
RESOLUTION=1024
MIXED_PRECISION=bf16
CAPTION_BATCH_SIZE=8
DATALOADER_NUM_WORKERS=4

# --- Reproducibility ---
#GLOBAL_SEED=

# --- Weights & Biases (optional) ---
#WANDB_API_KEY=
WANDB_PROJECT=loracat
